#!/usr/bin/env ruby

require 'async/http'

url = ARGV.pop || "https://relay2.oblivious.network/fullduplex"
endpoint = Async::HTTP::Endpoint.parse(url)

Async do |task|
  client = Async::HTTP::Client.new(endpoint)
  body = Protocol::HTTP::Body::Writable.new

  input_task = task.async do
    1.upto(50) do |i|
      puts "[#{Time.now.iso8601}] < object #{i}"
      body.write("object #{i}\n")
      sleep 1
    end
    $stdin.gets
    # while line = $stdin.gets
    #   body.write(line)
    # end
  ensure
    body.close_write
  end

  response = client.post(endpoint.path, body: body, headers: {
    "Content-Type" => "message/ohttp-chunked-req",
    "Incremental" => "?1",
  })

  response.each do |chunk|
    $stdout.write("[#{Time.now.iso8601}] > #{chunk}\n")
  end
ensure
  input_task&.stop
  response&.close
end
